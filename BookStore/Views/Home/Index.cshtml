@{
    ViewData["Title"] = "Home Page";
}
@model BooksViewModel

<div class="text-center">
    <h1 class="display-4">Books</h1>
        
    <!--section for books listed out on page-->
    @foreach (Book b in Model.Books)
    {
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <ul class="list-unstyled">
                <li>Author: @b.Author</li>
                <li>Publisher: @b.Publisher</li>
                <li>ISBN: @b.ISBN</li>
                <li>Category: @b.Classification/@b.Category</li>
                <li>Number of pages: @b.PageCount</li>
            </ul>
            <br />
        </div>
    </div>
    }
    
    <!--links to other pages of books-->
    <div page-links="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
         class="btn-group pull-right m-1">

    </div>
</div>