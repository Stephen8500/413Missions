@inherits LayoutComponentBase

<!--banner across top-->
<div class="bg-info text-white p-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <span class="navbar-brand m-lg-2">Book Store Administration</span>
            </div>
            <div class="col-2 tet-right">
                <a class="btn btn-sm btn-primary" href="/account/logout">Log Out</a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row p-2">
        <div class="col-3">
            <!--bootstrap buttons grouped vertically on left side of page-->
            <div class="d-grid gap-2 btn-group-vertical btn-block">
                <NavLink class="btn btn-outline-primary" href="/admin/books" 
                         ActiveClass="btn-primary text-white" 
                         Match="NavLinkMatch.Prefix">Books</NavLink>
                <NavLink class="btn btn-outline-primary" href="/admin/purchases"
                         ActiveClass="btn-primary text-white" 
                         Match="NavLinkMatch.Prefix">Purchases</NavLink>
            </div>
        </div>

        <!--receives body of each blazor component-->
        <div class="col">
            @Body
        </div>
    </div>
</div>