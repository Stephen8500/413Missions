@page
@model BookStore.Pages.PurchaseModel
@{
}

<h2>Your cart</h2>

<table class="table table-bordered table-striped">
    
    <!--column names-->
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <!--items in cart-->
    <tbody>
        @foreach (var i in Model.shoppingCart.Items)
    {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price.ToString("c")</td>
            <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>
            <!-- button for removing items from cart -->
            <td class="text-center">
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookID" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>

    <!--total for purchase-->
    <tfoot>
        <tr>
            <td colspan="3">Total: </td>
            <td>@Model.shoppingCart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<!--button for returning to shopping and checkout-->
<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Purchase">Checkout</a>
</div>