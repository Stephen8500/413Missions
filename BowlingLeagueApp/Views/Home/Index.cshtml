@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>

<h1>Bowlers</h1>

<a class="btn btn-success" asp-controller="Home" asp-action="Add">Add New Bowler</a>
<br />
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
        <tr>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID" class="btn btn-warning">Edit</a></td>
            <td>
                <form type="post" asp-controller="Home" asp-action="Delete">
                    <input type="hidden" id="id" name="id" value="@b.BowlerID" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
